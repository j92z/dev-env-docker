#!/bin/bash
{
    echo '# max open files';
    echo 'fs.file-max = 51200';
    echo '# max read buffer';
    echo 'net.core.rmem_max = 67108864';
    echo '# max write buffer';
    echo 'net.core.wmem_max = 67108864';
    echo '# default read buffer';
    echo 'net.core.rmem_default = 65536';
    echo '# default write buffer';
    echo 'net.core.wmem_default = 65536';
    echo '# max processor input queue';
    echo 'net.core.netdev_max_backlog = 4096';
    echo '# max backlog';
    echo 'net.core.somaxconn = 4096';
    echo '# resist SYN flood attacks';
    echo 'net.ipv4.tcp_syncookies = 1';
    echo '# reuse timewait sockets when safe';
    echo 'net.ipv4.tcp_tw_reuse = 1';
    echo '# turn off fast timewait sockets recycling';
    echo 'net.ipv4.tcp_tw_recycle = 0';
    echo '# short FIN timeout';
    echo 'net.ipv4.tcp_fin_timeout = 30';
    echo '# short keepalive time';
    echo 'net.ipv4.tcp_keepalive_time = 1200';
    echo '# outbound port range';
    echo 'net.ipv4.ip_local_port_range = 10000 65000';
    echo '# max SYN backlog';
    echo 'net.ipv4.tcp_max_syn_backlog = 4096';
    echo '# max timewait sockets held by system simultaneously';
    echo 'net.ipv4.tcp_max_tw_buckets = 5000';
    echo '# turn on TCP Fast Open on both client and server side';
    echo 'net.ipv4.tcp_fastopen = 3';
    echo '# TCP receive buffer';
    echo 'net.ipv4.tcp_rmem = 4096 87380 67108864';
    echo '# TCP write buffer';
    echo 'net.ipv4.tcp_wmem = 4096 65536 67108864';
    echo '# turn on path MTU discovery';
    echo 'net.ipv4.tcp_mtu_probing = 1';
    echo 'net.ipv4.tcp_congestion_control = bbr';
} | tee /etc/sysctl.d/local.conf;
sysctl --system;